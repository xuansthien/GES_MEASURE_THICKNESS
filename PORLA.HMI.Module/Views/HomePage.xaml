                                      materialDesign:ColorZoneAssist.Background="DimGray"
                                      materialDesign:ColorZoneAssist.Foreground="WhiteSmoke" Grid.Column="0" Grid.ColumnSpan="2" Height="250">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <WrapPanel                                                                          
                                Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center"                                                                               
                                Margin="0,9,0,0">
                                <Button Command="{Binding AutoCmd}"                                     
                                        Content="Auto">
                                    <Button.Style>
                                        <Style TargetType="Button"
                                               BasedOn="{StaticResource CustomButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Auto}" Value="True">
                                                    <Setter Property="Background" Value="#00FF00" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Command="{Binding ManualCmd}"                                                       
                                        Content="Manual">
                                    <Button.Style>
                                        <Style TargetType="Button"                                              
                                               BasedOn="{StaticResource CustomButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Auto}" Value="False">
                                                    <Setter Property="Background" Value="#00FF00" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Command="{Binding InitCmd}"                                                        
                                        Content="Initialize">
                                    <Button.Style>
                                        <Style TargetType="Button"                                              
                                               BasedOn="{StaticResource CustomButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Init}" Value="True">
                                                    <Setter Property="Background" Value="#00FF00" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </WrapPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <WrapPanel                                                                          
                                Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center"                                                                               
                                Margin="0,9,0,0">
                                <Button Command="{Binding StartCmd}"                                                                                                                                      
                                        Content="Start" IsEnabled="{Binding IsStartEna}">
                                    <Button.Style>
                                        <Style TargetType="Button"                                              
                                               BasedOn="{StaticResource CustomButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsStart}" Value="True">
                                                    <Setter Property="Background" Value="#00FF00" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>

                                </Button>

                                <Button Command="{Binding StopCmd}"                                                        
                                        Content="Stop">
                                    <Button.Style>
                                        <Style TargetType="Button"                                              
                                               BasedOn="{StaticResource CustomButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsStop}" Value="True">
                                                    <Setter Property="Background" Value="#FF3333" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <!--<Button Command="{Binding ResetCmd}"                                                            
