                        materialDesign:ColorZoneAssist.Mode="Custom"
                        materialDesign:ColorZoneAssist.Background="DimGray"
                        materialDesign:ColorZoneAssist.Foreground="WhiteSmoke" Grid.Column="0" Grid.ColumnSpan="2" Height="250">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <WrapPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center"
                                       Margin="0,9,0,0">
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left"
                                           VerticalAlignment="Center">
                                    <Button HorizontalAlignment="Right"
                                            Margin="0,0,3,0" Height="30">
                                        <Button.Style>
                                            <Style TargetType="Button"
                                                   BasedOn="{StaticResource Lampt}">
                                                <Setter Property="Tag"                                
                                                        Value="False"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding AppService.DIOModule1.Connected}"
                                                                 Value="True">
                                                        <Setter Property="Tag"
                                                                Value="True" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Label>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Connection" Width="30" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            <TextBlock Text="DIO Module 1" VerticalAlignment="Center" FontSize="12" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Label>
                                </WrapPanel>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left"
                                           VerticalAlignment="Center">
                                    <Button HorizontalAlignment="Right"
                                            Margin="0,0,3,0" Height="30">
                                        <Button.Style>
                                            <Style TargetType="Button"
                                                   BasedOn="{StaticResource Lampt}">
                                                <Setter Property="Tag"                                
                                                        Value="False"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding AppService.DIOModule2.Connected}"
                                                                 Value="True">
                                                        <Setter Property="Tag"
                                                                Value="True" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Label>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Connection" Width="30" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            <TextBlock Text="DIO Module 2" VerticalAlignment="Center" FontSize="12" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Label>
                                </WrapPanel>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left"
                                           VerticalAlignment="Center">
                                    <Button HorizontalAlignment="Right"
                                            Margin="0,0,3,0" Height="30">
                                        <Button.Style>
                                            <Style TargetType="Button"
                                                   BasedOn="{StaticResource Lampt}">
                                                <Setter Property="Tag"                                
                                                        Value="False"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding AppService.DIOModule2.IOMapping[5]}"
                                                                 Value="True">
                                                        <Setter Property="Tag"
                                                                Value="True" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Label>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Connection" Width="30" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Safety Circuit" VerticalAlignment="Center" FontSize="12" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Label>
                                </WrapPanel>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left"
                                           VerticalAlignment="Center">
                                    <Button HorizontalAlignment="Right"
                                            Margin="0,0,3,0" Height="30">
                                        <Button.Style>
                                            <Style TargetType="Button"
                                                   BasedOn="{StaticResource Lampt}">
                                                <Setter Property="Tag"                                
                                                        Value="False"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding AppService.DIOModule1.IOMapping[5]}"
                                                                 Value="True">
                                                        <Setter Property="Tag"
                                                                Value="True" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Label>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Vacuum" Width="30" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Vacuum Status" VerticalAlignment="Center" FontSize="12" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Label>
                                </WrapPanel>

                            </WrapPanel>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <WrapPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Margin="0,9,0,0">
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left"
                                           VerticalAlignment="Center">
                                    <Button HorizontalAlignment="Right"
                                            Margin="0,0,3,0" Height="30">
                                        <Button.Style>
                                            <Style TargetType="Button"
                                                   BasedOn="{StaticResource Lampt}">
                                                <Setter Property="Tag"                                
                                                        Value="False"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding AppService.IAIMotion.Connected}"
                                                                 Value="True">
                                                        <Setter Property="Tag"
                                                                Value="True" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Label>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Connection" Width="30" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            <TextBlock Text="IAI Motion" VerticalAlignment="Center" FontSize="12" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Label>
                                </WrapPanel>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left"
                                           VerticalAlignment="Center">
                                    <Button HorizontalAlignment="Right"
                                            Margin="0,0,3,0" Height="30">
                                        <Button.Style>
                                            <Style TargetType="Button"
                                                   BasedOn="{StaticResource Lampt}">
                                                <Setter Property="Tag"                                
                                                        Value="False"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding AppService.IAIMotion.ServoOn}"
                                                                 Value="True">
                                                        <Setter Property="Tag"
                                                                Value="True" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Label>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Motor" Width="30" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Servo On" VerticalAlignment="Center" FontSize="12" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Label>
                                </WrapPanel>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left"
                                           VerticalAlignment="Center">
                                    <Button HorizontalAlignment="Right"
                                            Margin="0,0,3,0" Height="30">
                                        <Button.Style>
                                            <Style TargetType="Button"
                                                   BasedOn="{StaticResource Lampt}">
                                                <Setter Property="Tag"                                
                                                        Value="False"></Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding AppService.PrecitecService.Connected}"
                                                                 Value="True">
                                                        <Setter Property="Tag"
                                                                Value="True" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Label>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Connection" Width="30" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Precitec Controller" VerticalAlignment="Center" FontSize="12" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Label>
                                </WrapPanel>
                            </WrapPanel>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="0" Grid.Column="2">
            <StackPanel>
                <GroupBox Header="CONTROL PANEL" FontSize="13" BorderThickness="2" Margin="5,10,5,5"                 
