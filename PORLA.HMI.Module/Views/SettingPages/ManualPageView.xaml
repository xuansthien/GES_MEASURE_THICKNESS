<UserControl x:Class="PORLA.HMI.Module.Views.SettingPages.ManualPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PORLA.HMI.Module.Views.SettingPages"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             Background="#EDEDED"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
             d:DesignHeight="900" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"></RowDefinition>
            <RowDefinition Height="7*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1"
              Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="1.3*"></RowDefinition>
            </Grid.RowDefinitions>
            <Border Grid.ColumnSpan="1"
                    Margin="7,0,7,5"
                    BorderBrush="DimGray"
                    BorderThickness="0,0,0,1">
                <Label       HorizontalContentAlignment="Left"
                             VerticalContentAlignment="Center"
                             HorizontalAlignment="Left"
                             Width="200"
                             Background="Transparent"
                             Foreground="Black"
                             FontSize="17"
                             FontWeight="Normal"
                             Content=" Input"/>
            </Border>
            <Border Grid.Column="2"
                    Margin="7,0,7,5"
                    BorderBrush="DimGray"
                    BorderThickness="0,0,0,1">
                <Label       HorizontalContentAlignment="Left"
                             VerticalContentAlignment="Center"
                             HorizontalAlignment="Left"
                             Width="200"
                             Background="Transparent"
                             Foreground="Black"
                             FontSize="17"
                             FontWeight="Normal"
                             Content="Motion IAI"/>
            </Border>
            <Grid Grid.Row="1" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="10,5,0,0">

                    <WrapPanel Orientation="Horizontal"
                               VerticalAlignment="Center">
                        <Button  HorizontalAlignment="Right"
                                 Margin="0,0,7,0"
                                 Height="30"
                                 AutomationProperties.AutomationId="LampStart">
                            <Button.Style>
                                <Style TargetType="Button"
                                       BasedOn="{StaticResource Lampt}">
                                    <Setter Property="Tag" Value="False"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AppService.DIOModule1.IOMapping[4]}"
                                                     Value="True">
                                            <Setter Property="Tag" Value="True" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <TextBlock Text="Start"
                                   VerticalAlignment="Center"
                                   FontSize="13"/>
                    </WrapPanel>
                    <WrapPanel Orientation="Horizontal"
                               Margin="0,5"
                               VerticalAlignment="Center">
                        <Button  HorizontalAlignment="Right"
                                 Margin="0,0,7,0"                          
                                 Height="30"
                             >
                            <Button.Style>
                                <Style TargetType="Button"
                                       BasedOn="{StaticResource Lampt}">
                                    <Setter Property="Tag"
                                Value="False"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AppService.DIOModule1.IOMapping[3]}"
                                                     Value="True">
                                            <Setter Property="Tag" Value="True" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <TextBlock Text="Stop"
                                   VerticalAlignment="Center"
                                   FontSize="13"/>
                    </WrapPanel>
                    <WrapPanel Orientation="Horizontal"
                               Margin="0,5"
                               VerticalAlignment="Center">
                        <Button  HorizontalAlignment="Right"
                                 Margin="0,0,7,0"                                                         
                                 Height="30">
                            <Button.Style>
                                <Style TargetType="Button"
                                       BasedOn="{StaticResource Lampt}">
                                    <Setter Property="Tag"
                                            Value="False"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AppService.DIOModule1.IOMapping[2]}"
                                                     Value="True">
                                            <Setter Property="Tag"
                                                    Value="True" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <TextBlock Text="Reset"
                                   VerticalAlignment="Center"
                                   FontSize="13"/>
                    </WrapPanel>
                    <WrapPanel Orientation="Horizontal"
                               Margin="0,5"
                               VerticalAlignment="Center">
                        <Button  HorizontalAlignment="Right"
                                 Margin="0,0,7,0"                            
                                 Height="30">
                            <Button.Style>
                                <Style TargetType="Button"
                                       BasedOn="{StaticResource Lampt}">
                                    <Setter Property="Tag"
                                            Value="False"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AppService.DIOModule2.IOMapping[0]}"
                                                     Value="True">
                                            <Setter Property="Tag"
                                                    Value="True" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <TextBlock Text="Service Key"
                                   VerticalAlignment="Center"
                                   FontSize="13"/>
                    </WrapPanel>
                    <WrapPanel Orientation="Horizontal"
                               Margin="0,5"
                               VerticalAlignment="Center">
                        <Button  HorizontalAlignment="Right"
                                 Margin="0,0,7,0"                           
                                 Height="30">
                            <Button.Style>
                                <Style TargetType="Button"
                                       BasedOn="{StaticResource Lampt}">
                                    <Setter Property="Tag"
                                            Value="False"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AppService.DIOModule1.IOMapping[1]}"
                                                     Value="True">
                                            <Setter Property="Tag"
                                                    Value="True" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <TextBlock Text="EMO"
                                   VerticalAlignment="Center"
                                   FontSize="13"/>

                    </WrapPanel>
                    <WrapPanel Orientation="Horizontal"
                               Margin="0,5"
                               VerticalAlignment="Center">
                        <Button  HorizontalAlignment="Right"
                                 Margin="0,0,7,0"                           
                                 Height="30">
                            <Button.Style>
                                <Style TargetType="Button"
                                       BasedOn="{StaticResource Lampt}">
                                    <Setter Property="Tag"
                                            Value="False"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AppService.DIOModule2.IOMapping[1]}"
                                                     Value="True">
                                            <Setter Property="Tag"
                                                    Value="True" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <TextBlock Text="Z Stage Sensor"
                                   VerticalAlignment="Center"
                                   FontSize="13"/>
                    </WrapPanel>
                    <WrapPanel Orientation="Horizontal"
                               Margin="0,5"
                               VerticalAlignment="Center">
                        <Button  HorizontalAlignment="Right"
                                 Margin="0,0,7,0"                           
                                 Height="30">
                            <Button.Style>
                                <Style TargetType="Button"
                                       BasedOn="{StaticResource Lampt}">
                                    <Setter Property="Tag"
                                            Value="False"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AppService.DIOModule2.IOMapping[2]}"
                                                     Value="True">
                                            <Setter Property="Tag"
                                                    Value="True" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <TextBlock Text="Fixture Sensor"
                                   VerticalAlignment="Center"
                                   FontSize="13"/>

                    </WrapPanel>
                </StackPanel>
                <StackPanel Orientation="Vertical"
                            Margin="10,5,0,0"
                            Grid.Column="1">

                    <WrapPanel Orientation="Horizontal"
                               Margin="0,5"
                               VerticalAlignment="Center">
                        <Button  HorizontalAlignment="Right"
                                 Margin="0,0,7,0"                                                        
                                 Height="30">
                            <Button.Style>
                                <Style TargetType="Button"
                                       BasedOn="{StaticResource Lampt}">
                                    <Setter Property="Tag"                                
                                            Value="False"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AppService.DIOModule2.IOMapping[3]}"
                                                     Value="True">
                                            <Setter Property="Tag"
                                                    Value="True" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <TextBlock Text="Left Door Sensor"
                                   VerticalAlignment="Center"
                                   FontSize="13"/>
                    </WrapPanel>
                    <WrapPanel Orientation="Horizontal"
                               Margin="0,5"
                               VerticalAlignment="Center">
                        <Button  HorizontalAlignment="Right"
                                 Margin="0,0,7,0"                                                             
                                 Height="30">
                            <Button.Style>
                                <Style TargetType="Button"                                                                
                                       BasedOn="{StaticResource Lampt}">
                                    <Setter Property="Tag"                                
                                            Value="False"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AppService.DIOModule2.IOMapping[4]}"
                                                     Value="True">
                                            <Setter Property="Tag"
                                                    Value="True" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <TextBlock Text="Right Door Sensor"
                                   VerticalAlignment="Center"
                                   FontSize="13"/>
                    </WrapPanel>
                    <WrapPanel Orientation="Horizontal"
                               Margin="0,5"
                               VerticalAlignment="Center">
                        <Button  HorizontalAlignment="Right"
                                 Margin="0,0,7,0"                                                        
                                 Height="30">
                            <Button.Style>
                                <Style TargetType="Button"
                                       BasedOn="{StaticResource Lampt}">
                                    <Setter Property="Tag"                                
                                            Value="False"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AppService.DIOModule1.IOMapping[0]}"
                                                     Value="True">
                                            <Setter Property="Tag"
                                                    Value="True" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <TextBlock Text="Front Door Status"
                                   VerticalAlignment="Center"
                                   FontSize="13"/>
                    </WrapPanel>
                    <WrapPanel Orientation="Horizontal"
                               Margin="0,5"
                               VerticalAlignment="Center">
                        <Button  HorizontalAlignment="Right"
                                 Margin="0,0,7,0"                                                        
                                 Height="30">
                            <Button.Style>
                                <Style TargetType="Button"
                                       BasedOn="{StaticResource Lampt}">
                                    <Setter Property="Tag"                                
                                            Value="False"></Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AppService.DIOModule1.IOMapping[6]}"
                                                     Value="True">
                                            <Setter Property="Tag"
                                                    Value="True" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <TextBlock Text="Main Air Status"
                                   VerticalAlignment="Center"
                                   FontSize="13"/>
                    </WrapPanel>
                    <WrapPanel Orientation="Horizontal"
                               Margin="0,5"
                               VerticalAlignment="Center">
                        <Button  HorizontalAlignment="Right"
                                 Margin="0,0,7,0"                                                        
                                 Height="30">
                            <Button.Style>
                                <Style TargetType="Button"
                                       BasedOn="{StaticResource Lampt}">
                                    <Setter Property="Tag"                                
                                            Value="False"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AppService.DIOModule1.IOMapping[7]}"
                                                     Value="True">
                                            <Setter Property="Tag"
                                                    Value="True" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <TextBlock Text="Vaccum Button"
                                   VerticalAlignment="Center"
                                   FontSize="13"/>
                    </WrapPanel>
                    <WrapPanel Orientation="Horizontal"
                               Margin="0,5"
                               VerticalAlignment="Center">
                        <Button  HorizontalAlignment="Right"
                                 Margin="0,0,7,0"                                                        
                                 Height="30">
                            <Button.Style>
                                <Style TargetType="Button"
                                       BasedOn="{StaticResource Lampt}">
                                    <Setter Property="Tag"                                
                                            Value="False"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AppService.DIOModule2.IOMapping[5]}"
                                                     Value="True">
                                            <Setter Property="Tag"
                                                    Value="True" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <TextBlock Text="Safety Circuit"
                                   VerticalAlignment="Center"
                                   FontSize="13"/>
                    </WrapPanel>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="0.8*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Grid.ColumnSpan="3"
                        Margin="7,0,7,5" BorderBrush="DimGray" 
                        BorderThickness="1,1,1,1">
                    <WrapPanel Orientation="Horizontal"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left">
                        <Button Style="{StaticResource CustomButtonStyle}"
                                Margin="50,0,20,0"
                                Content=" Home"
                                FontWeight="Normal"
                                FontSize="12"
                                Height="35"
                                Width="90"
                                Command="{Binding AppCommand.cmdIAIAbsoluteMove}"
                                CommandParameter="home"
                                Background="#9FB6CD">
                        </Button>
                        <Button Style="{StaticResource CustomButtonStyle}"
                                Margin="0,0,20,0" Content="Servo On"
                                FontWeight="Normal"
                                FontSize="12"
                                Height="35"
                                Width="90"
                                Command="{Binding AppCommand.cmdIAIServoOnOff}" 
                                CommandParameter="SVON"
                                Background="#9FB6CD"/>
                        <Button Style="{StaticResource CustomButtonStyle}"
                                Margin="0,0,20,0" Content="Servo Off"
                                FontWeight="Normal"
                                FontSize="12"
                                Height="35"
                                Width="90"
                                BorderBrush="Transparent"
                                Command="{Binding AppCommand.cmdIAIServoOnOff}" 
                                CommandParameter="SVOFF"
                                Background="#9FB6CD"/>
                        <Button Style="{StaticResource CustomButtonStyle}"
                                Margin="0,0,40,0" Content="Alarm Reset"
                                FontWeight="Normal"
                                FontSize="12"
                                Height="35"
                                Width="90"
                                BorderBrush="Transparent"
                                Command="{Binding AppCommand.cmdIAIAlarmReset}"
                                Background="#9FB6CD"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <WrapPanel>
                                <Label Content="Axes X:" VerticalAlignment="Center" Margin="0,5,0,0"/>
                                <CheckBox Width="50" Height="40" 
                                          VerticalAlignment="Center" 
                                          HorizontalAlignment="Center" 
                                          Margin="5" 
                                          IsChecked="{Binding AppService.IAIMotion.IsSelectedAxisX}"
                                          Command="{Binding AppCommand.cmdIAIToggleCheckBox}"
                                          CommandParameter="XCheck">
                                </CheckBox>
                            </WrapPanel>
                            <WrapPanel Margin="20,0,0,0">
                                <Label Content="Axes Y: " VerticalAlignment="Center"></Label>
                                <CheckBox Width="50" Height="40" 
                                          VerticalAlignment="Center" 
                                          HorizontalAlignment="Center" 
                                          Margin="5"
                                          IsChecked="{Binding AppService.IAIMotion.IsSelectedAxisY}"
                                          Command="{Binding AppCommand.cmdIAIToggleCheckBox}"
                                          CommandParameter="YCheck">
                                </CheckBox>
                            </WrapPanel>
                        </StackPanel>
                    </WrapPanel>
                </Border>
                <Border Grid.Column="0" Grid.Row="1"
                    Margin="7,0,7,5"
                    BorderBrush="DimGray"
                    BorderThickness="1,1,1,1">
                    <WrapPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <StackPanel>
                            <StackPanel HorizontalAlignment="Center" 
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <WrapPanel Grid.Column="1"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center">
                                    <Label Content="● Speed(mm/s):" Margin="10,20,0,0"     
                                       FontWeight="Normal"
                                       FontSize="12"
                                       Height="45"/>
                                    <TextBox x:Name="inputJogSpeed" HorizontalContentAlignment="Center"
                                         Width="50" VerticalAlignment="Center"/>
                                </WrapPanel>
                                <Button Content="Apply"
                                    Style="{StaticResource CustomButtonStyle}"
                                    Command="{Binding AppCommand.cmdIAIUpdateJogSpeed}"
                                    CommandParameter="{Binding ElementName=inputJogSpeed, Path=Text}"
                                    Margin="10"
                                    FontWeight="Normal"
                                    FontSize="12" Width="90" Height="35"
                                    HorizontalAlignment="Right"
                                    BorderBrush="Transparent"
                                    VerticalAlignment="Bottom"
                                    Background="#9FB6CD"/>
                            </StackPanel>
                            <WrapPanel Grid.Row="1" Margin="0,30,0,0"
                                   Grid.Column="1"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Orientation="Horizontal">
                                <Button Style="{StaticResource CustomButtonStyle}"
                                    Content=" JOG X - ◀"
                                    FontWeight="Normal"
                                    FontSize="12" Margin="0 0 20 0"
                                        Width="90" Height="35"
                                    BorderBrush="Transparent"
                                    Background="#9FB6CD">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PreviewMouseDown">
                                            <prism:InvokeCommandAction Command="{Binding AppCommand.cmdIAIJogBackward}" CommandParameter="Press"/>
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="PreviewMouseUp">
                                            <prism:InvokeCommandAction Command="{Binding AppCommand.cmdIAIJogBackward}" CommandParameter="Release"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>
                                <Button Style="{StaticResource CustomButtonStyle}"
                                    Content="▶ JOG X +"
                                    FontWeight="Normal"
                                    FontSize="12" Margin="0"
                                        Width="90" Height="35"
                                    BorderBrush="Transparent"
                                    Background="#9FB6CD">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PreviewMouseDown">
                                            <prism:InvokeCommandAction Command="{Binding AppCommand.cmdIAIJogForward}" CommandParameter="Press"/>
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="PreviewMouseUp">
                                            <prism:InvokeCommandAction Command="{Binding AppCommand.cmdIAIJogForward}" CommandParameter="Release"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>
                            </WrapPanel>
                            <WrapPanel Grid.Row="1" Margin="0,30,0,0"
                                   Grid.Column="1"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Orientation="Horizontal">
                                <Button Style="{StaticResource CustomButtonStyle}"
                                    Content=" JOG Y - ◀"
                                    FontWeight="Normal"
                                    FontSize="12" Width="90" Height="35"
                                        Margin="0 0 20 0"
                                    BorderBrush="Transparent"
                                    Background="#9FB6CD">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PreviewMouseDown">
                                            <prism:InvokeCommandAction Command="{Binding AppCommand.cmdIAIAxisYJogBackward}" CommandParameter="Press"/>
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="PreviewMouseUp">
                                            <prism:InvokeCommandAction Command="{Binding AppCommand.cmdIAIAxisYJogBackward}" CommandParameter="Release"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>
                                <Button Style="{StaticResource CustomButtonStyle}"
                                    Content="▶ JOG Y +"
                                    FontWeight="Normal"
                                    FontSize="12"
                                    Width="90" Height="35"
                                    BorderBrush="Transparent"
                                    Background="#9FB6CD">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="PreviewMouseDown">
                                            <prism:InvokeCommandAction Command="{Binding AppCommand.cmdIAIAxisYJogForward}" CommandParameter="Press"/>
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="PreviewMouseUp">
                                            <prism:InvokeCommandAction Command="{Binding AppCommand.cmdIAIAxisYJogForward}" CommandParameter="Release"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>
                            </WrapPanel>
                        </StackPanel>
                    </WrapPanel>
                </Border>
                <Border Grid.Column="1" Grid.Row="1"
                    BorderBrush="DimGray" Margin="0 0 5 0"
                    BorderThickness="1,1,1,1">
                    <StackPanel VerticalAlignment="Top" 
                                HorizontalAlignment="Center">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Label Content="Axis X Moving Position (mm):"
                                       VerticalAlignment="Center"/>
                                <TextBox Text="{Binding AppService.IAIMotion.AxisXValue}" Margin="5" HorizontalContentAlignment="Center"
                                         VerticalAlignment="Center" HorizontalAlignment="Center" Width="100"/>
                            </WrapPanel>
                            <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Label Content="Axis Y Moving Position (mm):"
                                       VerticalAlignment="Center"/>
                                <TextBox Text="{Binding AppService.IAIMotion.AxisYValue}" Margin="5" HorizontalContentAlignment="Center"
                                         VerticalAlignment="Center" HorizontalAlignment="Center" Width="100"></TextBox>
                            </WrapPanel>
                            <WrapPanel>
                            </WrapPanel>
                        </StackPanel>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left"
                                   Margin="0 0 0 5">
                            <Button Style="{StaticResource CustomButtonStyle}"
                                    Margin="0,10,10,0"
                                    Content="Relative Move"
                                    FontWeight="Normal"
                                    FontSize="12"
                                    Height="35" Width="90"
                                    BorderBrush="Transparent"
                                    Command="{Binding AppCommand.cmdIAIRelativeMove}"
                                    Background="#9FB6CD"/>
                            <Button Style="{StaticResource CustomButtonStyle}"
                                    Content="Absolute Move"
                                    FontWeight="Normal"
                                    FontSize="12" Margin="0 10 0 0"
                                    Height="35"
                                    Width="90"
                                    BorderBrush="Transparent"
                                    Command="{Binding AppCommand.cmdIAIAbsoluteMove}"
                                    CommandParameter="ABS"
                                    Background="#9FB6CD"/>
                        </WrapPanel>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left"
                                   Margin="0 0 0 5">
                            <!--<Button Style="{StaticResource CustomButtonStyle}"
                                    Content="Test Sequence Move"
                                    FontWeight="Normal"
                                    Margin="0,0,10,0"
                                    FontSize="12"
                                    Height="35"
                                    Width="90"
                                    BorderBrush="Transparent"
                                    Command="{Binding AppCommand.cmdIAITestMove}"
                                    CommandParameter="ABS"
                                    Background="#9FB6CD"/>-->
                            <Button Style="{StaticResource CustomButtonStyle}"
                                    Margin="0,10,10,0"
                                    FontWeight="Normal" 
                                    FontSize="12"
                                    Height="35"
                                    Width="90"
                                    BorderBrush="Transparent"
                                    Command="{Binding AppCommand.cmdIAITestPatternMove}"
                                    CommandParameter="ABS"
                                    Background="#9FB6CD">
                                <TextBlock Text="Test Pattern Move" TextWrapping="Wrap" TextAlignment="Center"/>
                            </Button>
                            <Button Style="{StaticResource CustomButtonStyle}"
                                    FontWeight="Normal"
                                    FontSize="12" Margin="0 10 0 0"
                                    Height="35"
                                    Width="90"
                                    BorderBrush="Transparent"
                                    Command="{Binding AppCommand.cmdIAIStopPatternMove}"
                                    CommandParameter="ABS"
                                    Background="#9FB6CD">
                                <TextBlock Text="Stop Program Move" TextWrapping="Wrap" TextAlignment="Center"/>
                            </Button>
                        </WrapPanel>
                    </StackPanel>
                </Border>
                <Border Grid.Column="2" Grid.Row="1"
                    BorderBrush="DimGray"
                    BorderThickness="1,1,1,1">
                    <GroupBox Header="Axes Status" BorderBrush="#FF747474" 
                              BorderThickness="1">
                        <WrapPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                            <WrapPanel Orientation="Vertical" HorizontalAlignment="Left" 
                                       Margin="0 0 3 0">
                                <Label FontWeight="Bold" FontStyle="Italic"
                           Content="Axis" HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"/>

                                <Label Width="25" Height="30" FontWeight="Bold" FontStyle="Italic"
                           Content="X" HorizontalContentAlignment="Left"
                           VerticalContentAlignment="Center"/>

                                <Label Width="25" Height="30" FontWeight="Bold" FontStyle="Italic"
                           Content="Y" HorizontalContentAlignment="Left"
                           VerticalContentAlignment="Center"/>

                            </WrapPanel>
                            <WrapPanel Orientation="Vertical" HorizontalAlignment="Left"
                                       Margin="0 0 3 0">
                                <Label FontWeight="Bold" FontStyle="Italic"
                           Content="Coordinates" HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"/>

                                <Label Width="80" Height="30" FontWeight="Bold" FontStyle="Italic"
                           Content="{Binding AppService.IAIMotion.XCoordinate}" HorizontalContentAlignment="Center"
